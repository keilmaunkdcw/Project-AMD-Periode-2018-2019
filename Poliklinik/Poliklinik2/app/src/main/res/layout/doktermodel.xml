<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_dokter"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gambar1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp">
            <ImageView
                android:id="@+id/iv_foto"
                android:src="@color/colorPrimary"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_namadokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Dokter"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_iddokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Dokter"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/tv_spesialis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spesialis"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>