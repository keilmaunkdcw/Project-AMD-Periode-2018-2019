<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center"
    android:background="@drawable/gambar1"
    android:layout_height="match_parent"
    tools:context=".Daftar_user">

    <TextView
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:text="Daftar User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/et_nama"
        android:drawableLeft="@drawable/nama_user_24dp"
        android:paddingLeft="15dp"
        android:hint="Nama"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_user"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/user_24dp"
        android:hint="Username"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_pass"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/lock_24dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar"/>
</LinearLayout>